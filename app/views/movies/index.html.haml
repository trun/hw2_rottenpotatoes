-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      = th_sortable "title", "Movie Title", opts = { :id => 'title_header' }
      = th_sortable "rating"
      = th_sortable "release_date", "Release Date", opts = { :id => 'release_date_header' }
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
